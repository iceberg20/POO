<Window x:Class="SistemaAcademico.Splash"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Splash" Height="300" Width="300" BorderBrush="Transparent" Icon="media/icon.png" WindowStyle="None" AllowsTransparency="True" WindowStartupLocation="CenterScreen">
    <Window.Background>
        <ImageBrush/>
    </Window.Background>
    <Grid MouseLeftButtonDown="move">
        <Grid.Background>
            <ImageBrush ImageSource="media/Bitmap.png"/>
        </Grid.Background>
        <ProgressBar x:Name="ProgressBar" Visibility="Hidden" HorizontalAlignment="Left" Height="7" Margin="123,206,0,0" VerticalAlignment="Top" Width="142"/>
        <Button Content="Aluno" BorderBrush="Transparent" HorizontalAlignment="Left" Height="21" Margin="73,185,0,0" VerticalAlignment="Top" Width="69" Click="loginAluno">
            <Button.Background>
                <SolidColorBrush Color="#FFDDDDDD"/>
            </Button.Background>
        </Button>
        <Button Content="Professor" BorderBrush="Transparent" HorizontalAlignment="Left" Height="21" Margin="147,185,0,0" VerticalAlignment="Top" Width="69"/>
        <Button Content="Adm" BorderBrush="Transparent" HorizontalAlignment="Left" Height="21" Margin="221,185,0,0" VerticalAlignment="Top" Width="69" Click="AdmCadUser"/>

    </Grid>
</Window>
